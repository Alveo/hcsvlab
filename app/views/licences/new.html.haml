= tinymce_assets
.span9
  %div
    The licence will be applied to the following collections.
  %table{class:"table table-striped"}
    %tr
      %td ID
      %td Name
    - @collectionLists.each do |aCollectionList|
      %tr
        %td=aCollectionList.id
        %td=aCollectionList.name
.span9
  = form_tag({:action => 'create'}, :method=>"POST") do
    = field_set_tag do
      .input-prepend.input-append.search-form
        = hidden_field_tag 'collectionLists', @collectionLists.map{ |obj| obj.id }.to_s
        = label_tag 'name', "Licence name"
        = text_field_tag 'name'
        = label_tag 'text', "Licence text"
        = text_area_tag 'text', nil, rows: 10, cols: 25, class: "tinymce"
        %button{:name => "commit", :type => "submit"}
          Apply

= render 'shared/nectar_attribution'
= tinymce

