.form-card
  = render 'shared/login_tabs'
  .content
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post}) do |f|
      %h2 Forgot Your Password?
      = render "shared/error_messages", :target => @user
      = f.input :email
      .tou
        %p
          Please enter the email address previously used to sign up for an account. If an email address is entered other than the one used to sign up for an account, you will not receive instructions for changing your password.
      .form-actions
        = f.submit "Send me reset password instructions", :class => "btn btn-primary"
= render 'shared/nectar_attribution'
