<% # main container for facets/limits menu   -%>
<div id="facets" class="facets sidenav">

  <h4 data-toggle="collapse" data-target=".facets-collapse">
    <a class="btn btn-navbar">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>
    <%= t('blacklight.search.facets.title') %>
  </h4>

  <div class="facets-collapse">
    <% if user_signed_in? %>
      <ul class="clearfix" id="searchbar">
        <%= render_search_bar %>
      </ul>
    <% end %>
  </div>
  <% if has_facet_values? %>
    <div class="facets-collapse">
      <%= render_facet_partials %>
    </div>
  <% else %>
    <ul class="nav">
      <li><h5>No data collections available</h5></li>
      <li><a href="account/licence_agreements" class="alert-link">Licence Agreements</a></li>
    </ul>
  <% end %>
</div>
