.form-card
  %ul.nav.nav-tabs
    %li{ class: activepath_with_loggued_user?(users_path) }
      = link_to "Log in", users_path
    %li{ class: activepath_with_loggued_user?(users_aaf_sign_in_path) }
      = link_to "AAF Log in", users_aaf_sign_in_path
    %li{ class: activepath_with_loggued_user?(new_user_registration_path) }
      = link_to "Sign Up", new_user_registration_path
    %li.pull-right{ class: activepath_with_loggued_user?(new_user_password_path) }
      = link_to "I forgot my password", new_user_password_path
  .content
    .container
      - if @aaf_credentials[:mail].present?
        .control-group
          .controls
            %small
              Note: You are logged in via AAF as
              %strong #{@aaf_credentials[:mail]}
              ,
              - if User.find_by_email(@aaf_credentials[:mail])
                ="but your #{PROJECT_NAME} account request is pending approval."
              - else
                ="but you have not registered an account with #{PROJECT_NAME}."
              %br
              %br
              You may log in with a different account in the Log In tab or sign out of AAF.
              %br
              %br
            = link_to "← Sign out", destroy_user_session_path, :class => "btn btn-primary aaf"
      - else
        .control-group
          .controls
            %medium
              This will take you to the AAF (Australian Access Federation) login page.
              %br
              ="If you are not yet authorised to use #{PROJECT_NAME} you will need to wait for the admin to approve your user."
        .control-group
          .controls
            = link_to "Log in via AAF →", aaf_new_user_session_path, :class => "btn btn-lg aaf"

= render 'shared/nectar_attribution'
