%content
  %h1= @collection.name

  - unless params[:state].nil?
    = link_to "Back to Licence Agreements", "/account/licence_agreements", :class => "btn"

.document
  %h3
    %span Collection Details
  %dl.dl-horizontal.dl-invert
    - collection_show_fields(@collection).each do |field|
      %dt
        = field.first[0] + ":"
      %dd
        - if field.first[0] == "Description"
          = field.first[1].to_s.html_safe
        - else
          = field.first[1]
  - if can? :web_add_item, @collection
    %br
    = link_to "Add New Item", web_add_item_path, :id => 'add_new_item', :class => "btn"

  - if can? :edit_collection, @collection
    = link_to "Edit Collection", edit_collection_path, id: 'edit_collection', :class => "btn"

  - if can? :delete_collection, @collection
    = link_to "Delete Collection", delete_collection_path, method: :delete, id: 'edit_collection', :class => "btn btn-danger", data: {confirm: "Are you sure to delete current collection?"}
