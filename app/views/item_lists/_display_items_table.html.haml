-if !@response.nil?
  .span8{:id=>"content"}
    .buttons
      = button_to("Remove Item List", {:controller => "item_lists", :action => "destroy", :method => 'DELETE'}, :id => params[:id].to_i)
      - if (@document_list.empty?)
        .alert.alert-info Item List is empty
      - else
        = button_to("Clear Item List", {:controller => "item_lists", :action => "clear", :method => 'PUT'}, :id => params[:id].to_i)
        = render 'catalog/paginate_compact'
        = render_document_index nil, {}, {:showCheckbox => false, :itemViewList => true}
        = render 'results_pagination'