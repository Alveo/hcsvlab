.span3{:id=>"sidebar"}
  .facets.sidenav{:id => "facets"}
    %h4 Item List
    - @userItemLists = current_user.item_lists
    - if (@userItemLists.empty?)
      %div
        %h5{} Empty
    -else
      .facets-collapse
        - @userItemLists.each do |itemList|
          - selectedClass="selected" if (itemList.id == (params[:id].to_i))
          .facet_limit
            %h5{:class => "twiddle"}
              =link_to item_list_path(itemList) do
                %span{:class => selectedClass}
                  %div{:style=>"display:inline-block;width:90%;"}
                    =itemList.name
              %div{:style=>"display:inline-block;"}
                =link_to(itemList, :method => :delete, :confirm => 'Are you sure you want to remove the Item List "' + itemList.name + '"?') do
                  %i{:class=>"icon-trash"}
