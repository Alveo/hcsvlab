#download_matching_documents_dialog.modal-body
  %p
    = label_tag 'Download only files that match a particular GLOB pattern'
    = text_field_tag :aspera_textbox_filter, nil, :placeholder => "e.g. #{Item::DownloadItemsHelper::EXAMPLE_DOCUMENT_FILTER}"

.modal-separator
  = button_tag 'Download Matches', class: 'btn btn-primary', "aria-hidden" => "true", "data-dismiss" => "modal", :onclick => "performAsperaDownloadTransferForItemList(#{params[:id]}, document.getElementById('aspera_textbox_filter').value);"